{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: watch (webview)",
      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      },
      "problemMatcher": {
        "owner": "esbuild",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(ERROR|WARN):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\[mxscript\\] Webview playground watch started$",
          "endsPattern": "^\\[watch\\] build finished, watching for changes...$"
        }
      }
    }
  ]
}
